<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Recipe.RecipeAddFragment">
    <TextView
        android:id="@+id/page_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/lightyellow"
        android:text="NEW RECIPE "
        android:textStyle="bold"
        android:textColor="#FFFFFF" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/page_title"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">


        <!--제목 입력공간 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--제목 label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Title:"
                android:textStyle="bold"
                android:id="@+id/title"
                />
            <!--제목 입력창-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edit_text_Title"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_weight="0.08" />

        </LinearLayout>

        <!--재료 입력 공간 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--재료  label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Ingredient:"
                android:textStyle="bold"
                android:id="@+id/ingredient"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edit_text_Ingredient"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.08" />
        </LinearLayout>

        <!--순서 입력공간 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <!--순서 label -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Order:"
                android:textStyle="bold"
                android:id="@+id/order"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/recipe_order_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/edit_text_recipe_order"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="0.08"
                        />
                </LinearLayout>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add recipe order"
                    android:background="@color/ButtonYellow"
                    android:textColor="@color/Tab"
                    android:textStyle="bold"
                    android:id="@+id/btn_addOrder"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <!--총량 입력공간 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <!--총량 label -->
            <!--총량 label text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Amount:"
                android:textStyle="bold"
                android:id="@+id/people" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="-"
                android:background="@color/ButtonYellow"
                android:textColor="@color/Tab"
                />

            <EditText
                android:id="@+id/edit_text_Amount"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:focusable="false"
                android:text="0"
                />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="@color/ButtonYellow"
                android:textColor="@color/Tab"
                />

        </LinearLayout>

        <!--폰에서 그림 가져오는 공간 -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:weightSum="1"
            android:layout_weight="0.51"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#EEEEEE">


            <Button
                android:id="@+id/btn_select_gallery"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Add Image +"
                android:background="@color/ButtonYellow"
                android:textColor="@color/Tab"
                android:textStyle="bold"
                android:typeface="sans"
                />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

        </LinearLayout>
        <!--버튼 공간 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">
            <!--업로드 버튼-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:background="@color/ButtonYellow"
                android:textColor="@color/Tab"
                android:textStyle="bold"

                android:layout_marginRight="40dp"
                android:id="@+id/btn_save" />
            <!--취소 버튼 -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOW LIST"
                android:background="@color/ButtonYellow"
                android:textColor="@color/Tab"
                android:textStyle="bold"
                android:id="@+id/btn_listview"
                android:layout_toRightOf="@+id/btn_save"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</RelativeLayout>
